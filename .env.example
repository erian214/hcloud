# Hetzner Cloud API token
HC_KEY=your-token-here

# Server defaults
HC_SERVER_TYPE=cx23
HC_IMAGE=ubuntu-24.04
HC_LOCATION=fsn1
HC_SERVER_NAME=cx23-example

# SSH key configuration
HC_SSH_KEY_NAME=hcloud-key
HC_SSH_PUBLIC_KEY=$HOME/.ssh/id_ed25519.pub

# Provisioning behavior
HC_USER=ops
HC_ALLOWED_PORTS=22,80,443
HC_EXTRA_PACKAGES=

# Optional copy and startup
HC_COPY_SRC=
HC_STARTUP_SCRIPT=/opt/hcloud/scripts/startup.sh
HC_WAIT_TIMEOUT=420

# Deploy script settings (deploy.sh)
HC_DEPLOY_PORTS=22,80,443
HC_FIREWALL_NAME=deploy-firewall

# ClouDNS setup (optional)
# https://api.cloudns.net/dns/add-record.json
CLOUDNS_AUTH_ID=
CLOUDNS_AUTH_PASSWORD=
CLOUDNS_DOMAIN=
# Example wildcard: CLOUDNS_CNAME_HOST=*
CLOUDNS_CNAME_HOST=
CLOUDNS_CNAME_TARGET=
CLOUDNS_TTL=3600
